<div class="logo_type_not_home">
    <h1 id='postdate'><%=@post.date%></h1> 
</div>

<div class="post_wrapper">

<h3 id='post_headline'><%=@post.headline%></h3>

  <div style="float: left; width: 60%;">
    <%if @post.icon%>
      <%= image_tag @post.icon.icon.url(:thumb), class: 'title_icon', id: 'headline_icon' %>
    <%end%>

    <p><%= simple_format(@post.content) %></p>
  </div>

  <div style="float: right; width: 38%;">
    <%@post.post_images.each_with_index do |img, i|%>
      <caption><small><%="img #{i + 1}"%>.</small></caption><%= image_tag img.image_url %>
      <caption><small><%="img #{i + 1}"%>.</small></caption><%= image_tag img.image_url %>
    <%end%>
  </div>
  <!-- needs an edit button for me and a comment(maybe just tags?) options for the public -->

</div>