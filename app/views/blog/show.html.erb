<div class="logo_type_not_home">
  <h1 id='postdate'><%=@post.date%></h1> 
</div>

<div class="post_wrapper">

  <%if @post.icon && @post.icon.icon.url(:thumb) != '/images/thumb/missing.png'%>
    <h3 id='post_headline_with_icon'><%=@post.headline%></h3>
    <%= image_tag @post.icon.icon.url, class: 'title_icon', id: 'headline_icon' %>
    <br>
  <%else%>
    <h3 id='post_headline'><%=@post.headline%></h3>
  <%end%>
  <div style="float: left; width: 60%;">
    <p><%= simple_format(@post.content)%></p>
    <br><br>
  </div>

  <div style="float: right; width: 38%;">

  <!-- paperclip: --> <!-- maybe i can use Jquery later to hook into the image refs (<p id='img1'>see img 1<p> and replace them wit the actual image like $('#img1').html('/insert/img/url/here/img1') -->

    <%if @post.gallery%>
      <%@post.gallery.photos.each_with_index do |img, i|%>
        <caption><small><%="img #{i + 1}"%>.</small></caption><%= image_tag img.pic.url(:medium_horiz) %>
      <%end%>
    <%end%>
    <p style='visibility: hidden;'>.</p>
  </div>
  <!-- needs an edit button for me and a comment(maybe just tags?) options for the public -->

</div>