<div class="wrapper">
  <h1>Hi Don!</h1>

  <%=form_for @design, html: { multipart: true } do |f| %>
    <%=f.label :title %><br>
    <%=f.text_field :title %>
    <br>
    <%=f.label :client %><br>
    <%=f.text_field :client_name %>
    <br>
    <%=f.label :description %><br>
    <%=f.text_area :description %>
    <br>

    <h5>Gallery Images:</h5>
      <%= f.fields_for :gallery do |gal|%>
        <%= gal.label :name %><br>
        <%= gal.text_field :name%><br>
        <%= gal.label :photos %><br>
        <%= file_field_tag "photos[]", type: :file, multiple:true %>
      <% end %>    

    <%=f.submit%>
  <%end%>
</div>

