<div class="wrapper">
  <h1>Hi Don!</h1>
  <p>would you like to delete this design?<p>
  <%=link_to 'death to design', design_path(@design), :method => :delete %>
  <br>

  <%=form_for @design, html: { multipart: true } do |f| %>
    <%=f.label :title %><br>
    <%=f.text_field :title %>
    <br>
    <%=f.label :client %><br>
    <%=f.text_field :client_name %>
    <br>
    <%=f.label :description %><br>
    <%=f.text_field :description %>
    <br>
    <%=f.label :long_description %><br>
    <%=f.text_area :long_desc %>
    <br>

    <h5>Gallery Images:</h5>
      <%= f.fields_for :gallery do |gal|%>
        <%= gal.label  'replace photos' %>
        <%= gal.check_box 'replace photos', {:checked => false}, "true", "false"%><br><br>
        <%= gal.label :gallery_name %><br>
        <%= gal.text_field :name %><br>
        <%= gal.label :photos %><br>
        <%= file_field_tag "photos[]", type: :file, multiple:true %><br>
      <% end %>    

    <%=f.submit%>
  <%end%>
</div>
