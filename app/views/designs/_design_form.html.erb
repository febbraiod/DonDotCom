  <%=form_for @design, html: { multipart: true } do |f| %>
    <%=f.label :title %><br>
    <%=f.text_field :title %>
    <br>
    <%=f.label :client %><br>
    <%=f.text_field :client_name %>
    <br>
    <%=f.label :description %><br>
    <%=f.text_field :description %>
    <br>
    <%=f.label :long_description %><br>
    <%=f.text_area :long_desc %>
    <br>
    <%=f.label :display_rank%> 
    <%=number_field_tag :display_rank, nil, in: 1...10%>
    <br>

    <h5>Gallery Images:</h5>
      <%= f.fields_for @design.gallery do |gal|%>
        <%= gal.label :name %><br>
        <%= gal.text_field :name%><br><br>
        <%= gal.label :photos %>:<br><br>
        <%= file_field_tag "photos[]", type: :file, multiple:true %><br><br>
        <%= gal.label  'replace photos' unless @design.gallery.photos.count == 0 %>
        <%= gal.check_box 'replace photos', {:checked => false}, "true", "false" unless @design.gallery.photos.count == 0 %><br>
      <% end %>    
    <br>
    <%=f.submit%>
  <%end%>
